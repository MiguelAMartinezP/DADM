<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bground"
        android:adjustViewBounds="true"
        android:contentDescription="background_image"/>
    <LinearLayout
        android:id="@+id/test_level_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".65"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".65"
        >
        <ImageButton
            android:id="@+id/test_level_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingStart="-2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/button_texture" />

        <TextView
            android:layout_width="253dp"
            android:layout_height="75dp"
            android:fontFamily="@font/cloisterblack"
            android:paddingLeft="30dp"
            android:shadowColor="#80000000"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:text="Level up"
            android:textColor="#B39329"
            android:textSize="50dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>